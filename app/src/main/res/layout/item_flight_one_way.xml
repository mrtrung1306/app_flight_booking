<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutItemFligth"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/search_view">

    <RelativeLayout
        android:id="@+id/rltlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/divider_horizontal_bright">

        <RelativeLayout
            android:id="@+id/rltlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/txtDepartureDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23/12/2023"
                    android:textColor="#AB605B5B"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/txtDepartureTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtDepartureDay"
                    android:text="06:40"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txtDepartureCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtDepartureTime"
                    android:text="SGN"
                    android:textColor="#AB605B5B"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/txtSumTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="1 tiếng 20 phút"
                    android:textColor="#AB605B5B"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/dashed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtSumTime"
                    android:layout_marginTop="-5dp"
                    android:letterSpacing="0.1"
                    android:text="---------------------"
                    android:textColor="#B0B0B0"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imgAirportIcon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignBottom="@id/dashed"
                    android:layout_marginBottom="1dp"
                    android:layout_toEndOf="@id/dashed"
                    android:background="@drawable/baseline_flight_24"
                    android:backgroundTint="@color/black"
                    android:rotation="90" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp">

                <TextView
                    android:id="@+id/txtArrivalDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23/12/2023"
                    android:textColor="#AB605B5B"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/txtArrivalTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtArrivalDay"
                    android:text="06:40"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txtAirportCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtArrivalTime"
                    android:text="SGN"
                    android:textColor="#AB605B5B"
                    android:textSize="15sp" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/txtFlightNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rltlayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="vn1340"
            android:textAllCaps="true"
            android:textColor="@color/black" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rltlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rltlayout">
        <RelativeLayout
            android:id="@+id/rltlayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/txtFareType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phổ thông"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txtFareAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtFareType"
                android:layout_marginTop="20dp"
                android:text="1,600,00 VND"
                android:textSize="18dp"
                android:textColor="#D50D64A8"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id= "@+id/btnPhoThong"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/border_button"
                android:text="Chọn"
                android:textSize="15sp"
                android:textColor="@color/black"/>
        </RelativeLayout>
        <View
            android:id="@+id/border"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/rltlayout4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#996D7277" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rltlayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rltlayout2">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/txtFareType1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thương Gia"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txtFareAmount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtFareType1"
                android:layout_marginTop="20dp"
                android:text="1,600,00 VND"
                android:textSize="18dp"
                android:textColor="#D50D64A8"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id= "@+id/btnThuongGia"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/border_button"
                android:text="Chọn"
                android:textSize="15sp"
                android:textColor="@color/black"/>
        </RelativeLayout>

    </RelativeLayout>
    <!--<View
        android:id="@+id/border1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rltlayout3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#996D7277" />-->

</RelativeLayout>